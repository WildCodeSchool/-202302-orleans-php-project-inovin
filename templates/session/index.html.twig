{% extends 'admin.html.twig' %}
{% block title %}
	{{ parent() }}
	| Séances - Index
{% endblock %}
{% block admin_content_title %}NOS SÉANCES
{% endblock %}
{% block admin_content %}
	<div class="d-flex justify-content-center flex-wrap">
		<div class="row">
			<div class="mb-4 px-4 d-flex justify-content-end">
				<a role="button" class="btn mt-4" href="{{ path('app_session_new') }}">AJOUTER</a>
			</div>
		</div>
		<table class="table table-striped table-hover table-bordered border-secondary mb-5" style="width: 90%">
			<thead class="sticky-top">
				<tr class="py-4">
					<th class="w-25 py-3 text-center px-2 bg-secondary" scope="col">DATE D'OUVERTURE</th>
					<th class="w-auto th-lg py-3 text-center px-4 bg-secondary" scope="col">INTITULÉ</th>
					<th class="w-auto th-lg py-3 text-center px-4 bg-secondary" scope="col"></th>
				</tr>
			</thead>
			<tbody class="table-group-divider">
				{% for session in sessions %}
					<tr>
						<td class="px-4 align-middle align-center text-center">{{ session.openingDate ? session.openingDate|date('d/m/Y H:i') : '' }}
							{% if session.closed is same as(false) %}
								<span class="badge p-2 m-2 rounded-pill text-bg-success">Ouverte</span>
							{% else %}
								<span class="badge p-2 m-2 rounded-pill text-bg-danger">Terminée</span>
							{% endif %}
						</td>
						<td class="px-4 align-middle">{{ session.name }}</td>
						<td class="text-center p-4 w-25 align-middle">
							<a role="button" class="btn btn-outline-warning" href="{{ path('app_session_show', {'id': session.id}) }}">
								Voir
							</a>
							<a role="button" class="btn btn-outline-warning ms-3" href="{{ path('app_session_edit', {'id': session.id}) }}">
								Éditer
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="2">Aucun enregistrement trouvé...</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
