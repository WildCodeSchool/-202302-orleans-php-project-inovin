{% extends 'admin.html.twig' %}
{% block title %}
	{{ parent() }}
	| Cépages - Index
{% endblock %}
{% block admin_content_title %}NOS CÉPAGES
{% endblock %}
{% block admin_content %}
	<div>
		<div class="row">
			<div class="d-flex justify-content-end align-self-end px-4">
				<a role="button" class="bg-primary-light text-dark fw-bolder mb-4 icon-link icon-link-hover-left icon-dark text-uppercase order-2 btn" href="{{ path('app_cepage_new') }}">
					{{ include('/components/svg/_icon_add.svg.twig') }}
					AJOUTER</a>
			</div>
		</div>
		<table class="table table-striped table-hover table-bordered border-secondary">
			<thead class="sticky-top">
				<tr class="py-4">
					<th class="w-auto th-lg py-3 px-4 bg-secondary" scope="col">NOM</th>
					<th class="w-auto th-lg py-3 px-4 bg-secondary" scope="col">COULEUR</th>
					<th class="w-25 py-3 text-center px-2 bg-secondary" scope="col">ACTIONS</th>
				</tr>
			</thead>
			<tbody class="table-group-divider">
				{% for grape_variety in grape_varieties %}
					<tr>
						<td class="px-4">{{ grape_variety.name }}</td>
						<td class="px-4">
							<span class="badge rounded-pill w-25 px-2 py-1 fs-6 text-bg-{{ grape_variety.color.classcolor }}">{{ grape_variety.color.color }}
							</span>
						</td>
						<td class="text-center p-2 w-25">
							<div class="d-grid gap-2 d-md-flex justify-content-md-end">
								<a class="icon-link icon-link-hover-left link-light mx-4 text-decoration-none" href="{{ path('app_cepage_edit', {'id': grape_variety.id}) }}">
									{{ include('/components/svg/_icon_edit.svg.twig') }}
									Éditer
								</a>
								{{ include('./grape_variety/_delete_form.html.twig') }}
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">aucun enregistrement trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}