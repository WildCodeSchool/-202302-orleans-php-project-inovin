{% extends 'admin.html.twig' %}

{% block title %}
    {{ parent() }}
    |Recette - index
{% endblock %}

{% block admin_content_title %}
    NOS RECETTES
{% endblock %}

{% block admin_content %}
<div>
    <table class="table table-striped table-hover table-bordered border-secondary">
        <thead class="sticky-top">
            <tr class="py-4">
                <th class="w-auto th-lg py-3 px-4 bg-secondary" scope="col">NOM</th>
                <th class="w-25 py-3 text-center px-2 bg-secondary" scope="col">ACTIONS</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            {% for recipe in recipes %}
                <tr>
                    <td class="px-4">{{ recipe.name }}</td>
                    <td>
                        <a href="{{ path('app_admin_recipe_edit', {'id': recipe.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
            <tr>
                <td colspan="2">Aucun enregistrement.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}