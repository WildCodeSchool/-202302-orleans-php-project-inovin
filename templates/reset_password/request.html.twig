{% extends 'visitor.html.twig' %}

{% block title %}
	{{ parent()}}
	- Modifier votre mot de passe
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('resetPassword') }}
{% endblock %}

{% block body %}

	{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<main class="container-fluid d-flex justify-content-center align-items-center my-5 my-md-0">
		<div class="row">
			<div class="col-11 custom-max-width m-auto px-3 px-md-5 border border-secondary d-flex flex-column align-items-center py-5 bg-card ornement position-relative">
				<h2 class="text-center text-uppercase letter-spacing mt-5">Réinitialiser votre mot de passe</h2>
				{% include "components/svg/_frame_surlignage.svg.twig" %}
				<div class="my-5 px-3 w-100">
					{{ form_start(requestForm) }}
					{{ form_row(requestForm.email) }}
					<small class="d-flex align-items-start letter-spacing">
						<div class="custom-position me-2">
							{% include "components/svg/_icon_info.svg.twig" %}
						</div>
						Veuillez saisir votre adresse e-mail afin que nous puissions vous envoyer un lien permettant de réinitialiser votre mot de passe.
					</small>
				</div>
				<button class="order-2 bg-primary-light text-dark fw-bolder mb-4 icon-link icon-link-hover icon-dark text-uppercase order-2 btn mb-5">
					{{ button_label|default('Envoyer') }}
					{% include "components/svg/_icon_next.svg.twig" %}
				</button>
				{{ form_end(requestForm) }}
			</div>
		</div>
	</main>
{% endblock %}
