{% extends 'base.html.twig' %}

{% block title %}Wine{% endblock %}

{% block body %}
    <h1>Wine</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ wine.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ wine.name }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ wine.year }}</td>
            </tr>
            <tr>
                <th>Volume</th>
                <td>{{ wine.volume }}</td>
            </tr>
            <tr>
                <th>AlcoholPercent</th>
                <td>{{ wine.alcoholPercent }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ wine.price }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ wine.picture }}</td>
            </tr>
            <tr>
                <th>IsEnable</th>
                <td>{{ wine.isEnable ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_wine_index') }}">back to list</a>

    <a href="{{ path('app_wine_edit', {'id': wine.id}) }}">edit</a>

    {{ include('wine/_delete_form.html.twig') }}
{% endblock %}
