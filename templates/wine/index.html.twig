{% extends 'admin.html.twig' %}

{% block title %}
{{ parent() }}
| Vin - index
{% endblock %}

{% block admin_content_title %}
    Nos Vins
{% endblock %}

{% block admin_content %}
<div>
    <div class="row">
        <div class="d-flex justify-content-end align-self-end mb-4 px-4">
            <a role="button" class="btn mt-4" href="{{ path('app_wine_new') }}">AJOUTER</a>
        </div>
    </div>
    <table class="table table-striped table-hover table-bordered border-secondary">
        <thead class="sticky-top">
            <tr class="py-4">
                <th class="w-auto th-lg py-3 px-4 bg-secondary" scope="col">NOM</th>
                <th class="w-25 py-3 text-center px-2 bg-secondary" scope="col">ACTIONS</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            {% for wine in wines %}
            <tr>
                <td class="px-4">{{ wine.name }}</td>
                    <td class="text-center p-2 w-25">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a class="link-offset-2 px-1 mx-1" href="{{ path('app_wine_edit', {'id': wine.id}) }}">Modifier</a>
                            {{ include('wine/_delete_form.html.twig') }}
                        </div>
                    </td>
                </div>
            </tr>
            {% else %}
            <tr>
                <td colspan="9">Aucun enregistrement trouv√©.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}