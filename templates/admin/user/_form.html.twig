	<button class="btn bg-primary-light text-dark fw-bolder mb-4 icon-link icon-link-hover-left icon-dark text-uppercase order-2">
		{% include "components/svg/_icon_validate.svg.twig" %}
		{{ button_label|default('Valider') }}
	</button>
	<a class="btn fw-bolder mb-4 icon-link icon-link-hover-left icon-light text-uppercase order-3 order-sm-1" href="{{ path('app_admin_user_index') }}">
		{% include "components/svg/_icon_backlink.svg.twig" %}
