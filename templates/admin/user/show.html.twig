			<tr>
				<th>Pr√©nom</th>
				<td>{{ user.firstname }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ user.lastname }}</td>
			</tr>
			<tr>
				<th>Date de naissance</th>
				<td>{{ user.dateBirth ? user.dateBirth|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Code postal</th>
				<td>{{ user.zipCode }}</td>
			</tr>
			<tr>
				<th>Ville</th>
				<td>{{ user.city }}</td>
			</tr>
			<tr>
				<th>Adresse</th>
				<td>{{ user.address }}</td>
			</tr>
			<tr>
				<th>Pays</th>
				<td>{{ user.country }}</td>
			</tr>
			<tr>
				<th>Confirmation email</th>
				<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
			</tr>
		</tbody>
