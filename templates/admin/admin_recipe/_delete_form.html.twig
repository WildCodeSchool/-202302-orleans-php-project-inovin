<form method="post" action="{{ path('app_admin_recipe_delete', {'id': recipe.id}) }}"
    onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recipe.id) }}">
    <button class="bg-transparent border-0">
        <a class="icon-link icon-link-hover-left link-light text-decoration-none">
            {{ include('/components/svg/_icon_trash.svg.twig') }}
            Supprimer
        </a>
    </button>
</form>