{% extends 'admin.html.twig' %}

{% block title %}
	{{ parent() }}
	| Vin - index
{% endblock %}

{% block admin_content_title %}
	Nos Vins
{% endblock %}

{% block admin_content %}
	<div>
		<div class="row">
			<div class="d-flex justify-content-end align-self-end mb-4 px-4">
				<a role="button" class="bg-primary-light text-dark fw-bolder mb-4 icon-link icon-link-hover-left icon-dark text-uppercase order-2 btn" href="{{ path('app_admin_wine_new') }}">
					{{ include('/components/svg/_icon_add.svg.twig') }}
					AJOUTER
				</a>
			</div>
		</div>
		<table class="table table-striped table-hover table-bordered border-secondary">
			<thead class="sticky-top">
				<tr class="py-4">
					<th class="w-auto th-lg py-3 px-4 bg-secondary" scope="col">NOM</th>
					<th class="w-25 py-3 text-center px-2 bg-secondary" scope="col">ACTIONS</th>
				</tr>
			</thead>
			<tbody class="table-group-divider">
				{% for wine in wines %}
					<tr>
						<td class="px-4">{{ wine.name }}</td>
						<td class="text-center p-2 w-25">
							<div class="d-grid gap-2 d-md-flex justify-content-md-end">
								<a class="icon-link icon-link-hover-left link-light mx-4 text-decoration-none" href="{{ path('app_admin_wine_edit', {'id': wine.id}) }}">
									{{ include('/components/svg/_icon_edit.svg.twig') }}
									Éditer
								</a>
								{{ include('admin/wine/_delete_form.html.twig') }}
							</div>
						</td>
					</tr>
				</div>
			</tbody>
		</tr>
	{% else %}
		<tr>
			<td colspan="9">Aucun enregistrement trouvé.</td>
		</tr>
	{% endfor %}
</tbody></table></div>{% endblock %}