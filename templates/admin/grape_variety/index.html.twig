{% extends 'admin.html.twig' %}
{% block title %}
	{{ parent() }}
	| Cépages - Index
{% endblock %}
{% block admin_content_title %}NOS CÉPAGES
{% endblock %}
{% block admin_content %}

	<div class="row">
		<div class="d-flex justify-content-end align-self-end px-4">
			<a role="button" class="bg-primary-light text-dark fw-bolder mb-4 icon-link icon-link-hover-left icon-dark text-uppercase order-2 btn" href="{{ path('app_admin_cepage_new') }}">
				{{ include('/components/svg/_icon_add.svg.twig') }}
				AJOUTER</a>
		</div>
	</div>
	<div class=" table-responsive">
		<table class="table table-dark table-striped table-hover table-bordered border-secondary">
			<thead class="sticky-top">
				<tr class="py-4">
					<th class="w-auto th-lg py-3 px-4 bg-secondary text-uppercase letter-spacing" scope="col">Nom</th>
					<th class="w-auto th-lg py-3 px-4 bg-secondary text-uppercase letter-spacing" scope="col">Couleur</th>
					<th class="w-auto py-3 text-center px-2 bg-secondary text-uppercase letter-spacing" scope="col">Actions</th>
				</tr>
			</thead>
			<tbody class="table-group-divider">
				{% for grape_variety in grape_varieties %}
					<tr>
						<td class="px-4 align-middle">{{ grape_variety.name }}</td>
						<td class="px-4 align-middle">
							<span class="badge custom-w rounded-pill px-2 py-1 fs-6 text-bg-{{ grape_variety.color.classcolor }}">{{ grape_variety.color.color }}
							</span>
						</td>
						<td class="text-center">
							<div class="d-flex justify-content-md-center flex-nowrap gap-3">
								<a class="icon-link icon-link-hover-left link-light text-decoration-none" href="{{ path('app_admin_cepage_edit',{'id':grape_variety.id}) }}">
									{{include('/components/svg/_icon_edit.svg.twig') }}
									Éditer
								</a>
								{{ include('./admin/grape_variety/_delete_form.html.twig') }}
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">aucun enregistrement trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
