{% extends 'admin.html.twig' %}
{% block title %}
	{{ parent() }}
	| Cépages - Nouveau
{% endblock %}
{% block admin_content_title %}Nouveau Cépage
{% endblock %}
{% block admin_content %}
	<div class="row d-flex justify-content-center">
		<div class="col">
			{{ form_start(form) }}
			{{ form_row(form.name) }}
			{{ form_row(form.color) }}
			{{ form_row(form.descriptif) }}
			<div class="d-flex flex-sm-row flex-column justify-content-between my-4">
				<a role="button" class="btn fw-bolder mb-4 icon-link icon-link-hover-left icon-light text-uppercase order-3 order-sm-1" href="{{ path('app_admin_cepage_index') }}">
					{{ include('/components/svg/_icon_backlink.svg.twig') }}
					Retour
				</a>
				<button class="bg-primary-light text-dark fw-bolder mb-4 icon-link icon-link-hover icon-dark text-uppercase order-2 btn">
					{{ button_label|default('Valider') }}
					{{ include('/components/svg/_icon_validate.svg.twig') }}
				</button>
			</div>
			{{ form_end(form) }}
		</div>


	</div>
{% endblock %}