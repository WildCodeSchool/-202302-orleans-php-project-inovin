{% extends 'base.html.twig' %}
{% block title %}
	{{ parent() }}
	| Administration
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('admin') }}
{% endblock %}
{% block navbar %}{% endblock %}
{% block body %}
	<div class="container-fluid">
		<div class="container-admin p-0">
			<section>
				<div class="position-relative m-0 p-0">
					<div class="position-absolute top-0 start-0">
						<img src="{{ asset('build/images/corner-up-left.svg') }}">
					</div>
					<div class="d-flex justify-content-center align-items-center row">
						<h1 class="text-center pt-5">
							{% block admin_content_title %}{% endblock %}
						</h1>
						{% include "components/svg_img/_frame_separator_svg" %}
						<div class="mt-4 p-0">
							{% block admin_content %}{% endblock %}
						</div>
					</div>
					<div class="position-relative m-0 p-0">
						<div class="position-absolute bottom-0 end-0">
							<img src="{{ asset('build/images/corner-down-right.svg') }}">
						</div>
					</section>
				</div>
			</div>
		{% endblock %}
		{% block footer %}{% endblock %}
