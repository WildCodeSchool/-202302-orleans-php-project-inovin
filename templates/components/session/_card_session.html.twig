<div class="card bg-card mini-card position-relative">
	<div class="card-body d-flex justify-content-center flex-column p-3">
		<div class="d-flex flex-column gap-2 text-primary-light fs-4 pb-3 border border-secondary border-top-0 border-start-0 border-end-0">
			<div class="custom-size-mini-card overflow-y-auto">
				<p class="letter-spacing text-uppercase fs-6 m-0 text-primary-light">{{ session.name }}</p>
			</div>
			<div class="d-flex justify-content-start gap-2">
				<p class="mb-0 d-flex align-items-center gap-2 badge bg-primary text-dark p-2 custom-size-card">
					<svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-calendar-check" viewbox="0 0 16 16">
						<path d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
						<path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
					</svg>

					{{ session.openingDate|date("d/m/Y", "Europe/Paris", "fr") }}
				</p>
				<p class="mb-0 d-flex align-items-center gap-2 badge bg-primary text-dark p-2 custom-size-card">
					<svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-clock" viewbox="0 0 16 16">
						<path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z"/>
						<path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z"/>
					</svg>
					{{ session.openingDate|date("H", "Europe/Paris") ~ 'H' }}
				</p>
			</div>
		</div>
		{% if session.closed is same as(false) %}
			<p class="text-secondary-light mt-2">PROCHAINEMENT</p>
		{% else %}
			<p class="mt-2 text-danger">TERMINÃ‰E</p>
		{% endif %}

		<div class="row mt-3 gap-2 px-2">
			<div class="col p-0">
				<div class="bg-primary text-center text-dark letter-spacing custom-text-size fw-bolder">
					<span>
						<svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-geo-alt" viewbox="0 0 16 16">
							<path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z"/>
							<path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
						</svg>
					</span>
					LIEU
				</div>
				<div class="text-start text-light overflow-auto letter-spacing height-location ms-2 mt-2 fw-lighter">
					{{ session.location }}
				</div>
			</div>
		</div>
	</div>
</div>
