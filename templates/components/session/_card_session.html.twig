<div class="card bg-card mini-card position-relative">
	<div class="line-card"></div>
	<div class="card-body d-flex justify-content-center flex-column p-3">
		<div class="d-flex gap-2 text-primary-light fs-4">

			<p class="mb-0 d-flex align-items-center gap-2 badge bg-primary text-dark p-2 custom-size-card">
				<svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-calendar-check" viewbox="0 0 16 16">
					<path d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
					<path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
				</svg>

				{{ session.openingDate|date("d/m/Y", "Europe/Paris", "fr") }}
			</p>
			<p class="mb-0 d-flex align-items-center gap-2 badge bg-primary text-dark p-2 custom-size-card">
				<svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-clock" viewbox="0 0 16 16">
					<path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z"/>
					<path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z"/>
				</svg>
				{{ session.openingDate|date("H", "Europe/Paris") ~ 'H' }}
			</p>
		</div>
		{% if session.closed is same as(false) %}
			<p class="text-secondary-light mt-3">PROCHAINEMENT</p>
		{% else %}
			<p class="mt-3 text-danger">TERMINÃ‰E</p>
		{% endif %}

		<div class="row mt-3 gap-2 px-2">
			<div class="col p-0">
				<div class="bg-primary text-center text-dark letter-spacing custom-text-size fw-bolder">
					LIEU
				</div>
				<div class="text-start text-light overflow-auto letter-spacing height-location ms-2 mt-2 fw-lighter">
					{{ session.location }}
				</div>
			</div>
		</div>
	</div>
</div>
